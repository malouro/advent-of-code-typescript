    "jiti": "^2.6.1",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^24.0.0",
    "dotenv": "^17.2.3",
